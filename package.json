{
  "name": "react-app-typescript-starter",
  "version": "1.0.0",
  "description": "A starter kit for building React application using typescript",
  "repository": "git+ssh://git@github.com/nitishkr88/react-app-typescript-starter.git",
  "homepage": "https://github.com/nitishkr88/react-app-typescript-starter#readme",
  "scripts": {
    "npmcheckversion": "node ./internals/scripts/npmcheckversion.js",
    "preinstall": "npm run npmcheckversion",
    "prebuild": "npm run build:clean",
    "build:clean": "rimraf ./dist",
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.js --color -p --progress --hide-modules --display-optimization-bailout",
    "start": "cross-env NODE_ENV=development node server",
    "start:production": "npm run build && npm run start:prod",
    "start:prod": "cross-env NODE_ENV=production node server",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts --fix",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "prettify": "prettier \"+(src)/**/*.+(js|jsx|ts|tsx)\" --write",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "React",
    "TypeScript",
    "boilerplate",
    "starter-kit",
    "setup"
  ],
  "author": "Nitish",
  "license": "MIT",
  "lint-staged": {
    "*.{js|jsx|ts|tsx}": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "cross-env": "^6.0.3",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "minimist": "^1.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-export-default-from": "^7.7.4",
    "@babel/plugin-syntax-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@types/chalk": "^2.2.0",
    "@types/classnames": "^2.2.9",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^24.0.25",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-polyfill": "^6.26.0",
    "camelcase": "^5.3.1",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.1",
    "css-loader": "^3.4.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^6.0.0",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.2",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "less-vars-to-js": "^1.3.0",
    "lint-staged": "^9.5.0",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0",
    "react-app-polyfill": "^1.0.5",
    "rimraf": "^3.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "stylelint": "^12.0.1",
    "stylelint-config-standard": "^19.0.0",
    "svg-url-loader": "^3.0.3",
    "terser-webpack-plugin": "^2.3.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
